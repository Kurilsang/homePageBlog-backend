<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.kuril.homepageblogbackend.mapper.ArticleMapper">
    <select id="selectArticleList" resultType="site.kuril.homepageblogbackend.vo.ArticleListVO">
        SELECT
            id,
            title,
            summary,
            cover_image as coverImage,
            publish_date as date,
            tag,
            is_pinned as isPinned
        FROM article
        <where>
            <if test="search != null and search != ''">
                AND (
                    title LIKE CONCAT('%', #{search}, '%')
                    OR summary LIKE CONCAT('%', #{search}, '%')
                )
            </if>
            <if test="tag != null and tag != ''">
                AND tag = #{tag}
            </if>
            <if test="pinned != null and pinned == true">
                AND is_pinned = true
            </if>
        </where>
        ORDER BY is_pinned DESC, publish_date DESC
    </select>
</mapper> 